{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "dist",
        "downlevelIteration": true,
        "strict": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@src/*": ["src/*"]
        }
    },
    "exclude": ["dist", "test", "src/**/*.test.ts"],
    "include": ["src"],
    "compileOnSave": true
}
